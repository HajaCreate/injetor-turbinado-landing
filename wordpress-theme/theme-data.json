  "security_features": {
    "login_error_obfuscation": true,
    "file_editing_disabled": true,
    "xmlrpc_disabled": true,
    "wp_version_removal": true,
    "emoji_scripts_removal": true,
    "unnecessary_wp_head_cleanup": true
  },
  "performance_optimizations": {
    "gutenberg_disabled_for_posts": true,
    "wp_embed_script_removal": true,
    "wp_block_library_dequeue": true,
    "clean_wp_head": true
  },
  "seo_features": {
    "custom_meta_tags": true,
    "structured_data_ready": true,
    "open_graph_ready": true,
    "twitter_card_ready": true
  },
  "responsive_breakpoints": {
    "mobile": "max-width: 768px",
    "tablet": "max-width: 1024px", 
    "desktop": "min-width: 1025px"
  },
  "color_scheme": {
    "primary_brand": "#FF8C00",
    "dark_brand": "#1a1a1a",
    "brown_accent": "#8B4513",
    "light_background": "#ffffff",
    "muted_background": "#f8f9fa"
  },
  "installation_instructions": {
    "step_1": "Baixe todos os arquivos do tema",
    "step_2": "Crie um arquivo ZIP com todos os arquivos",
    "step_3": "Acesse WordPress Admin > Aparência > Temas > Adicionar Novo",
    "step_4": "Clique em 'Enviar Tema' e selecione o arquivo ZIP",
    "step_5": "Ative o tema após a instalação",
    "step_6": "Configure as opções em Personalizar > Informações de Contato"
  },
  "required_plugins": {
    "recommended": [
      "Contact Form 7",
      "Yoast SEO",
      "WP Rocket (cache)",
      "Wordfence Security"
    ],
    "optional": [
      "WooCommerce (para e-commerce)",
      "Elementor (page builder)",
      "Advanced Custom Fields"
    ]
  },
  "browser_support": {
    "chrome": "Últimas 2 versões",
    "firefox": "Últimas 2 versões", 
    "safari": "Últimas 2 versões",
