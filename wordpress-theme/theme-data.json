{
  "theme_info": {
    "name": "Curso Reparação Unidade Injetora",
    "description": "Tema especializado para curso de reparação de unidades injetoras - design responsivo e otimizado para conversão",
    "version": "1.0.0",
    "author": "Curso UI",
    "text_domain": "curso-ui",
    "requires_wp": "5.0",
    "tested_up_to": "6.4",
    "requires_php": "7.4",
    "license": "GPL v2 or later",
    "tags": ["education", "business", "responsive", "custom-colors", "custom-logo", "custom-menu", "featured-images", "footer-widgets", "one-column", "two-columns", "left-sidebar", "right-sidebar", "threaded-comments", "translation-ready"]
  },
  "theme_features": {
    "custom_logo": true,
    "post_thumbnails": true,
    "html5_support": ["search-form", "comment-form", "comment-list", "gallery", "caption"],
    "automatic_feed_links": true,
    "title_tag": true,
    "custom_image_sizes": {
      "unit-card": {"width": 400, "height": 300, "crop": true},
      "hero-bg": {"width": 1920, "height": 1080, "crop": true}
    }
  },
  "customizer_settings": {
    "contact_section": {
      "whatsapp_number": {
        "default": "5511999999999",
        "type": "text",
        "label": "Número do WhatsApp"
      },
      "phone_number": {
        "default": "5511999999999", 
        "type": "text",
        "label": "Número do Telefone"
      },
      "contact_email": {
        "default": "contato@cursounidadeinjetora.com.br",
        "type": "email",
        "label": "Email de Contato"
      }
    }
  },
  "widget_areas": {
    "sidebar-1": {
      "name": "Sidebar Principal",
      "description": "Widgets para a sidebar principal"
    },
    "footer-1": {
      "name": "Footer Widget 1", 
      "description": "Widgets para o footer"
    }
  },
  "shortcodes": {
    "whatsapp_button": {
      "description": "Botão do WhatsApp",
      "attributes": {
        "text": "Falar no WhatsApp",
        "message": "Olá! Gostaria de saber mais sobre o curso de reparação de unidade injetora.",
        "class": "btn btn-primary"
      },
      "usage": "[whatsapp_button text=\"Falar Conosco\" message=\"Olá! Preciso de informações.\"]"
    },
    "phone_button": {
      "description": "Botão de telefone",
      "attributes": {
        "text": "Ligar Agora",
        "class": "btn btn-secondary"
      },
      "usage": "[phone_button text=\"Ligar Agora\"]"
    }
  },
